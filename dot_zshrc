# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/Users/philfan/miniconda/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/Users/philfan/miniconda/etc/profile.d/conda.sh" ]; then
        . "/Users/philfan/miniconda/etc/profile.d/conda.sh"
    else
        export PATH="/Users/philfan/miniconda/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<


